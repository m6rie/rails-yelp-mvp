<div>
  <h2><%= @restaurant.name %></h2>
  <p><%= @restaurant.address %></p>
  <p><%= @restaurant.phone_number %></p>
  <p><%= @restaurant.category %></p>
</div>

<div>
<h3>Reviews</h3>
  <ul>
    <h3><% @restaurant.reviews.each do |review| %></h3>
    <li><%= review.rating %>: <%= review.content %></li>
    <% end %>
  </ul>
</div>

<div>
  <h3>Post a new review</h3>
  <%= simple_form_for ([@restaurant, @review]) do |f| %>
  <%= f.input :content %>
  <%= f.input :rating %>
  <%= f.submit %>
  <% end %>
</div>

<%= link_to "Back to index", restaurants_path%>
